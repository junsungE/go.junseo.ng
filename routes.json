{
  "routes": [
    {
      "route": "/admin/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/new",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/dashboard",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/ext/premium/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/ext/:slug",
      "rewrite": "/api/redirect?slug={slug}&scope=external"
    },
    {
      "route": "/:slug",
      "rewrite": "/api/redirect?slug={slug}&scope=internal"
    },
    {
      "route": "/",
      "serve": "/web/html/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/web/html/index.html"
  },
  "mimeTypes": {
    ".json": "text/json"
  },
  "responseOverrides": {
    "401": {
      "redirect": "/web/html/unauthorized.html",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/web/html/404.html"
    }
  }
}


{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/new",
      "serve": "/web/html/new.html"
    },
    {
      "route": "/dashboard",
      "serve": "/web/html/dashboard.html"
    },
    {
      "route": "/ext",
      "serve": "/web/html/ext/index.html"
    },
    {
      "route": "/ext/premium",
      "serve": "/web/html/ext/premium.html"
    },
    {
      "route": "/",
      "serve": "/web/html/index.html"
    },
    {
      "route": "/:slug",
      "redirect": "/api/redirect?slug={slug}&scope=internal"
    },
    {
      "route": "/ext/:slug",
      "redirect": "/api/redirect?slug={slug}&scope=external"
    }
  ]
}
