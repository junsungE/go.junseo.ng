{
  "auth": {
    "rolesSource": "app",
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "",
          "clientIdSettingName": "",
          "clientSecretSettingName": ""
        }
      },
      "github": {
        "registration": {
          "clientIdSettingName": "",
          "clientSecretSettingName": ""
        }
      }
    }
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "https://YOUR_DOMAIN.azurestaticapps.net",
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Content-Security-Policy": "default-src 'self' https:; object-src 'none'; frame-ancestors 'none';"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css"
  },
  "platform": {
    "apiRuntime": "node:20"
  },
  "navigationFallback": {
    "rewrite": "/web/html/index.html",
    "exclude": ["/api/*", "/admin/*"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/web/html/404.html",
      "statusCode": 404
    },
    "401": {
      "rewrite": "/web/html/unauthorized.html",
      "statusCode": 401
    }
  }
}


{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*"]
  },
  "routes": [
    { "route": "/api/*", "allowedRoles": ["anonymous"] }
  ],
  "responseOverrides": {
    "404": { "rewrite": "/index.html" }
  },
  "mimeTypes": {
    ".html": "text/html"
  }
}
