{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/new",
      "rewrite": "/new.html"
    },
    {
      "route": "/dashboard",
      "rewrite": "/dashboard.html"
    }
  ],
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "",
          "clientIdSettingName": "",
          "clientSecretSettingName": ""
        }
      },
      "github": {
        "registration": {
          "clientIdSettingName": "",
          "clientSecretSettingName": ""
        }
      }
    }
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "https://gentle-bush-0a1f4bd03.3.azurestaticapps.net",
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Content-Security-Policy": "default-src 'self' https:; object-src 'none'; frame-ancestors 'none';"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css"
  },
  "platform": {
    "apiRuntime": "node:20"
  },
  "navigationFallback": {
    "rewrite": "/api/redirect?scope=internal",
    "exclude": ["/api/*", "/*.html", "/*.css", "/*.js", "/*.ico", "/media/*", "/.auth/*"]
  },
  "responseOverrides": {
    "401": {
      "rewrite": "/web/html/unauthorized.html",
      "statusCode": 401
    }
  }
}

